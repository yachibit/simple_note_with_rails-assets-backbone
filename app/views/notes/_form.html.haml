= form_for(@note) do |f|
  - if @note.errors.any?
    #error_explanation
      %h2
        = pluralize(@note.errors.count, "error")
        prohibited this note from being saved:
      %ul
        - @note.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :title
    %br/
    = f.text_field :title
  .field
    = f.label :raw_body
    %br/
    = f.text_area :raw_body
  .field
    = f.label :body
    %br/
    = f.text_area :body
  .actions
    = f.submit
